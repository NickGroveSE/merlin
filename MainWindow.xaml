<Window x:Class="MerlinWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="merlin"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="#111827"
        Icon="assets/wizard-hat-logo.ico">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <!-- No triggers = no hover effect -->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NavButtonImageStyle" TargetType="Image">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Nav Bar -->
        <Border Grid.Row="1" Background="#1f2937">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0">
                    <TextBlock Text="powered by" Foreground="#fbbf24" FontSize="12" VerticalAlignment="Center" Margin="0,8,5,0"/>
                    <Button Style="{StaticResource NavButtonStyle}"
                            Tag="https://metatrack.ing/"
                            Click="OpenLink_Click">
                        <Button.Content>
                            <TextBlock Text="metatrack.ing" Foreground="#fbbf24" FontWeight="Bold" FontSize="22" VerticalAlignment="Top"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                    <Button Style="{StaticResource NavButtonStyle}"
                            Tag="https://metatrack.ing/"
                            Click="OpenLink_Click">
                            <Button.Content>
                                <Image Source="assets/website.png" Style="{StaticResource NavButtonImageStyle}"/>
                            </Button.Content>
                    </Button>
                    <Button Style="{StaticResource NavButtonStyle}"
                            Tag="https://buy.stripe.com/14A4gz5Embg66D88tO4wM01"
                            Click="OpenLink_Click">
                            <Button.Content>
                                <Image Source="assets/heart.png" Style="{StaticResource NavButtonImageStyle}"/>
                            </Button.Content>
                    </Button>
                    <Button Style="{StaticResource NavButtonStyle}">
                            <Button.Content>
                                <Image Source="assets/settings.png" Style="{StaticResource NavButtonImageStyle}"/>
                            </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>